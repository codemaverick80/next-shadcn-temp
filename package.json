{
  "name": "nextjs-shadcn",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "set NODE_ENV=development&& dotenv -e .env.local drizzle-kit generate",
    "db:introspect": "set NODE_ENV=development&&dotenv drizzle-kit introspect",
    "db:push": "set NODE_ENV=development&& dotenv -e .env.local drizzle-kit push",
    "db:migrate": "set NODE_ENV=development&& dotenv -e .env.local tsx src/db/migrate.ts",
    "db:drop-migration": "set NODE_ENV=development&& dotenv -e .env.local drizzle-kit drop",
    "db:clear": "set NODE_ENV=development&& dotenv -e .env.local tsx ./src/db/clear.ts",
    "db:seed": "set NODE_ENV=development&& dotenv -e .env.local tsx src/db/seed.ts",
    "db:studio": "dotenv drizzle-kit studio",
    "shadcn:add": "npx dlx shadcn-ui@latest add"
  },
  "dependencies": {
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
